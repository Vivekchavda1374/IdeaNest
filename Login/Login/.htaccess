# Allow Google OAuth popup communication
<IfModule mod_headers.c>
    Header unset Cross-Origin-Opener-Policy
    Header unset Cross-Origin-Embedder-Policy
    
    # Strict CSP - Block all mixed content and unauthorized scripts
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://accounts.google.com; style-src 'self' 'unsafe-inline' https://accounts.google.com; img-src 'self' data: https:; connect-src 'self' https://accounts.google.com; frame-src https://accounts.google.com; upgrade-insecure-requests; block-all-mixed-content;"
    
    # Block insecure content
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
</IfModule>

# Disable PHP auto prepend/append to prevent injection
php_flag auto_prepend_file off
php_flag auto_append_file off

# Block access to insecure external scripts
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Block directfwd.com scripts
    RewriteCond %{HTTP_REFERER} directfwd\.com [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>
