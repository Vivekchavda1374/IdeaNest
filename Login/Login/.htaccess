# Allow Google OAuth popup communication
<IfModule mod_headers.c>
    Header unset Cross-Origin-Opener-Policy
    Header unset Cross-Origin-Embedder-Policy
    
    # Allow Google OAuth
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://accounts.google.com; style-src 'self' 'unsafe-inline' https://accounts.google.com; img-src 'self' data: https:; connect-src 'self' https://accounts.google.com; frame-src https://accounts.google.com;"
</IfModule>
