{
    "name": "ideanest/academic-project-platform",
    "description": "IdeaNest - Academic Project Management Platform",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.9",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "IdeaNest\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 --colors -p .",
        "phpstan": "phpstan analyse --level=5 --memory-limit=1G",
        "quality": [
            "@phpcs",
            "@phpstan"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
